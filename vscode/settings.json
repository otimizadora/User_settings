{
    "powermode.enabled": true,
    "powermode.presets": "flames",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",
    "git.autofetch": true,
    //###################### Firacode #######################
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true, // muda ligaduras: == != >= =>
    //########################################################
    "[javascript]": {},
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "githubPullRequests.remotes": [],
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "code-runner.runInTerminal": true,
    "code-runner.defaultLanguage": "c",
    "code-runner.executorMap": {
        // stop é crt+alt+m OUTPUT
        //"cpp": "cd /home/lele/Downloads/simulador && g++ simulador.cpp -o simulador && clear && ./simulador bin.obj"
        //"c": "cd /home/lele/Documentos/PC/aula7/ && gcc -fopenmp 1.5.somaparcial.c -o exec && time ./exec && rm exec"
        //"c": "cd /home/lele/Documentos/PC/aula8 && gcc -pthread 3-anel.c && ./a.out "
        //"python": "python3 -u "
        "c": "make &&" 
    },
    "window.menuBarVisibility": "default",
    "git.suggestSmartCommit": false,
    //"terminal.integrated.shell.linux": "/bin/zsh",
    "editor.fontSize": 15,
    // ###### TERMINAL ######################## 
    "workbench.colorCustomizations": {
        "terminal.background": "#200833",
        "terminal.foreground": "#D0D0D0",
        "terminalCursor.background": "#D0D0D0",
        "terminalCursor.foreground": "#d0d0d0",
        "terminal.ansiBlack": "#151515",
        "terminal.ansiBlue": "#6FC2EF",
        "terminal.ansiBrightBlack": "#505050",
        "terminal.ansiBrightBlue": "#71ACE6",
        "terminal.ansiBrightCyan": "#F11793",
        "terminal.ansiBrightGreen": "#00FF00",
        "terminal.ansiBrightMagenta": "#B638D7",
        "terminal.ansiBrightRed": "#E13554",
        "terminal.ansiBrightWhite": "#F5F5F5",
        "terminal.ansiBrightYellow": "#97F2BC",
        "terminal.ansiCyan": "#FEFF00",
        "terminal.ansiGreen": "#D592E7",
        "terminal.ansiMagenta": "#26F1D5",
        "terminal.ansiRed": "#B638D7",
        "terminal.ansiWhite": "#D0D0D0",
        "terminal.ansiYellow": "#2DD67C",
        // #################### My Theme ######################
        "tab.activeBackground": "#090a20", //tab file ativa
        "tab.activeForeground": "#00ffff",
        "activityBar.background": "#75065d",
        "activityBar.activeBorder": "#ff00ff",
        "activityBarBadge.background": "#6a00ff",
        "activityBarBadge.foreground": "#00ffff",
        "activityBar.inactiveForeground": "#090a20",
        "activityBar.activeBackground": "#090a20",
        "activityBar.foreground": "#00ffffe4",
        "sideBar.background": "#220430",
        "tab.inactiveBackground": "#090a20", //all tab file
        "editor.background": "#090a20", // BG cor fundo
        "editorGroupHeader.tabsBackground": "#220430", // atras das tab files
        "panel.background": "#090a20", // barra em cima do terminal
        "panel.border": "#6a00ff",
        "panelTitle.activeBorder": "#ff00ff",
        "breadcrumb.background": "#550544", // barra do caminho file
        "breadcrumbPicker.background": "#220430",
        "tab.activeBorder": "#ff00ff",
        "tab.activeBorderTop": "#ff00ff",
        "tab.border": "#6a00ff", // BGDarker
        "activityBar.border": "#6a00ff",
        "sideBar.border": "#6a00ff", // Originally Empty => BG
        "statusBar.border": "#6a00ff", // Originally Empty => BG
        "tab.hoverBorder": "#00ffff",
        "tab.hoverForeground": "#00ffff",
        "panelTitle.inactiveForeground": "#B638D7",
        "panelTitle.activeForeground": "#00ffffe4",
        "sideBarSectionHeader.background": "#550544", // BG
        "sideBarSectionHeader.border": "#6a00ff", // BGDarker
        "bookmarks.lineBackground": "#0d00ff32",
        // ### more
        /* 
        "editor.lineHighlightBackground": "#22222200", // cor cursor do mouse
        "editor.lineHighlightBorder": "#22222200", // borda cursor do mouse
        "editor.selectionHighlightBackground": "#666", // outras selecoes iguais do cursor do mouse
        "statusBar.background": "#40a84e", // BGDarker
        "statusBar.noFolderBackground": "#242729", // BGDarker
        "titleBar.activeBackground": "#548847", // BGDark
        "titleBar.inactiveBackground": "#163d57" //BGDarker */
        "editor.selectionBackground": "#222222f4", // selecao do cursor do mouse
    },
    "editor.renderLineHighlight": "none", // remove selecao fixa de cursor do mouse na linha
    //ruby
    "ruby.useBundler": true, //run non-lint commands with bundle exec
    "ruby.useLanguageServer": false, // use the internal language server (see below)
    "ruby.lint": {
        "rubocop": {
            "useBundler": true // enable rubocop via bundler
        },
        "reek": {
            "useBundler": true // enable reek via bundler
        }
    },
    "ruby.format": "rubocop",
    "[ruby]": {
        "editor.defaultFormatter": "rebornix.ruby"
    },
    "discord.state": "Codando...",
    "discord.showElapsedTime": false,
    "discord.details": "Codar é divertido!!!",
    "python.formatting.provider": "yapf",
    "editor.renderControlCharacters": false,
    "editor.guides.indentation": false,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "powermode.combo.counterEnabled": "hide",
    "powermode.shake.enabled": false,
    "powermode.combo.timerEnabled": "hide",
    "dart.debugExternalPackageLibraries": false,
    "dart.debugSdkLibraries": false,
    "window.zoomLevel": 1,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.list.horizontalScrolling": true,
    "breadcrumbs.enabled": false,
}
